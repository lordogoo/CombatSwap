<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#8BA870" />
            <stroke
                    android:width="1dp"
                    android:color="#3D5229" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#8BA870"
                    android:endColor="#3D5229"
                    android:angle="315" />
            <stroke
                    android:width="1dp"
                    android:color="#3D5229" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>