<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#B5B5B5" />
            <stroke
                    android:width="1dp"
                    android:color="#616161" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#B5B5B5"
                    android:endColor="#616161"
                    android:angle="315" />
            <stroke
                    android:width="1dp"
                    android:color="#616161" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>