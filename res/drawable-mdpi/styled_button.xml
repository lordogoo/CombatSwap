<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
    <shape>
        <solid
                android:color="#ef4444" />
        <stroke
                android:width="1dp"
                android:color="#992f2f" />
        <corners
                android:radius="6dp" />
        <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
    </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                    android:color="#d4a512" />
            <stroke
                    android:width="1dp"
                    android:color="#808080" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#efc544"
                    android:endColor="#d4a512"
                    android:angle="315" />
            <stroke
                    android:width="1dp"
                    android:color="#992f2f" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            <text
                    android:color="#ffffff" />
        </shape>
    </item>
</selector>